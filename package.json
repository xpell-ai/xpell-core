{
  "name": "xpell-core",
  "version": "2.0.0-alpha.5",
  "description": "Core runtime and interpreter for the Xpell engine (browser-based execution layer).",
  "type": "module",
  "files": [
    "dist",
    "src",
    "docs"
  ],
  "main": "./dist/xpell-core.cjs",
  "module": "./dist/xpell-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/xpell-core.es.js",
      "require": "./dist/xpell-core.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm run build:types",
    "build:types": "tsc --project tsconfig.types.json",
    "docs:api": "typedoc",
    "docs": "pnpm run docs:api",
    "test": "echo \"No tests yet\" && exit 0",
    "publish-alpha": "pnpm version prerelease --preid=alpha --no-git-tag-version && git add package.json pnpm-lock.yaml && git commit -m \"chore: bump version (alpha)\" && pnpm publish --tag alpha"
  },
  "keywords": [
    "xpell",
    "xpell-core",
    "ui-engine",
    "realtime-ui",
    "runtime",
    "interpreter",
    "framework",
    "engine",
    "web-runtime",
    "browser-runtime",
    "event-loop",
    "frontend-engine",
    "xui",
    "x3d",
    "dom-engine",
    "typescript",
    "javascript"
  ],
  "author": "Tamir Fridman <fridman.tamir@gmail.com> (https://github.com/fridman-tamir)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xpell-ai/xpell-core.git"
  },
  "devDependencies": {
    "typedoc": "^0.27.0",
    "typescript": "^5.6.0",
    "vite": "^7.2.7"
  }
}
